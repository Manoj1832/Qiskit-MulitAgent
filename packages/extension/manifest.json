{
  "manifest_version": 3,
  "name": "SWE-Agent Copilot",
  "version": "1.0.0",
  "description": "AI-powered autonomous code fixer for GitHub Issues and Pull Requests. Powered by IBM SWE-Agent multi-agent pipeline.",
  "author": "SWE-Agent Team",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://github.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues/*",
        "https://github.com/*/pull/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SWE-Agent Copilot",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "*.js",
        "*.css"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}